{
  "defaultSeverity": "error",
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "rules": {
    "import-name": false,
    "interface-name": [true, "never-prefix"],
    "prettier": [true],
    "variable-name": {
      "options": ["allow-pascal-case"]
    }
  }
}
